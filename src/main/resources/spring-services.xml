<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <!-- Web Controllers -->
    <context:component-scan base-package="com.hiteak.service"/>
    <context:component-scan base-package="com.hiteak.repo"/>

    <!-- Spring JDBC Template -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <!--<bean id="facilityInfoService" class="com.hiteak.callcentersupport.service.old.FacilityInfoServiceImpl" />
    <bean id="callDetailService" class="com.hiteak.callcentersupport.service.old.CallDetailServiceImpl" />
    <bean id="xmlBuilder" class="com.hiteak.callcentersupport.groovy.XmlBuilder" />-->

    <!-- ====================  Apache Velocity Engine ==================== -->
    <bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="resourceLoaderPath">
            <value>/WEB-INF/templates/</value>
        </property>
    </bean>

</beans>