<form class="form-horizontal login-form" role="form">
    <div class="input-group margin-bottom-10">
        <span class="input-group-addon">Username</span>
        <input id="userName" type="text" class="form-control required" placeholder="Enter Your Email Address" style="width: 90%;">
    </div>
    <div class="input-group">
        <span class="input-group-addon" style="padding: 6px 13px;">Password</span>
        <input id="password" type="password" class="form-control required" placeholder="Enter Your Password" style="width: 90%;">
    </div>
    <div class="row padding-15">
        <div class="pull-right">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button id="loginBtn" type="button" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>